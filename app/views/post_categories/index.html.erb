<h1>Listing post_categories</h1>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_category.each do |post_category| %>
      <tr>
        <td><%= post_category.post %></td>
        <td><%= post_category.category %></td>
        <td><%= link_to 'Show', post_category %></td>
        <td><%= link_to 'Edit', edit_post_category_path(post_category) %></td>
        <td><%= link_to 'Destroy', post_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author post', new_post_category_path %>
