<%=render "form" %>
<div id="main">
    <%= image_tag 'main-img.jpg' %>
</div>


<div id="article_wrap">


    <div id="article_list">
        <ul>
        <% @post.each do |post| %>
        <div>
        <p class="picture4">
            <%= image_tag post.picture.url if post.picture.present? %>
        </p>
         <h2><a><%= link_to post.title, post_path(post)%></a><h2>
        <p>
        <% if post.user == @current_user %>
        【My Post】
        <% end %>
        <%= post.updated_at.strftime("%Y-%m-%d") %>
        
        <% post.post_categories.each do |f| %>
        <%= link_to f.category.category, posts_path(category: f.category.category) %>
        <% end %>
        </p>
        <% if logged_in? %>

        <p>コメント<%= post.comments.count %></br></p>
        <%= render partial: 'likes/like', locals: { post: post, likes: @likes } %>

        <% end %>
        <% if post.user == @current_user %>
        <%= link_to '編集', edit_post_path(post), class: 'command' %>
        <%= link_to '削除',
            post_path(post),
            method: :delete,
            class: 'command',
            data: { confirm: 'Sure?' }%>
        <% end %>
        </div>
        <% end %>
        </ul>


    </div>

    <div id="sidebar">

        <h2>★PV数ランキング</h2>
        <ul>
        </ul>
    </div>
    <div class="clear"></div>
</div>

<footer>
    <div id="footer_inner">
        <p>Copyright RailsCamp 2015 All Rights Reserved</p>
    </div>
</footer>

</body>
</html>
