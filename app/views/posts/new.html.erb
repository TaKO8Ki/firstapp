<%=render "form" %>
<div id="article_wrap">

<div id="article_list">
            <h2>
            <%= form_for @post do |f| %>
            <p>
                <%= f.label :title %>
               <%= f.text_field :title %>
               <% if  @post.errors.messages[:title].any? %>
               <span class="error"><%= @post.errors.messages[:title][0] %></span>
               <% end %>
            </p>
            <p>
                <%= f.label :category %></br>
                <%= collection_check_boxes(:post, :category_ids, Category.all, :id, :category) do |b| %>
                <%= b.label { b.check_box + b.text } %>
                <% end %>
            </p>
            <p>
                <%= f.label :content %></br>
                <%= f.text_area :content %>
               <% if  @post.errors.messages[:content].any? %>
               <span class="error"><%= @post.errors.messages[:content][0] %></span>
               <% end %>
            </p>
            <p>
               <%= f.submit %>
            </p>
            <% end %>
            </h2>
</div>

 <div class="clear"></div>
</div>

<footer>
    <div id="footer_inner">
        <p>Copyright RailsCamp 2015 All Rights Reserved</p>
    </div>
</footer>

</body>
</html>
